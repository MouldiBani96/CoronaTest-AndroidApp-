<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="380dp"
    android:background="@drawable/background_gradient"
    android:padding="5dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            app:srcCompat="@drawable/corona_virus_structure_bacteria_disease_science_icon_140287" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="احتمال المرض بCovid-19 "
            android:textColor="#E2293F"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView125"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="نسبة المرض :  "
            android:textColor="#302F2F"
            android:textSize="18sp" />

        <Button
            android:id="@+id/idreturnposs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="85dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/btn_backgroundsignup"
            android:text="إعادة"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="180dp"
        android:text="%"
        android:textColor="#020202"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/resultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="180dp"
        android:text="0"
        android:textColor="#020202"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginRight="15dp"
        android:text="إتصل بي   190 "
        android:textColor="#E00404"
        android:textSize="18sp" />


</RelativeLayout>
