<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz.Quiz3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/background_gradient" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/fievre2" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="250dp"
        android:paddingTop="50dp"
        android:textColor="#fff"
        android:text=" سؤال3 : "
        android:textSize="24sp"/>


    <EditText
        android:id="@+id/qestion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/textfiled"
        android:drawablePadding="20dp"
        android:editable="false"
        android:text="ما هي درجة حرارة جسمك؟"
        android:textSize="18sp" />
    <Spinner
        android:id="@+id/idCombo"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:outlineAmbientShadowColor="#4E4C4C"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="230dp"
        />

    <Button
        android:id="@+id/idNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/btn_backgroundsignup"
        android:text="التالي"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />


</RelativeLayout>