<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz.Quiz3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:background="@drawable/background_gradient" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/gorge" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="250dp"
        android:paddingTop="50dp"
        android:paddingRight="16dp"
        android:text=" سؤال5 : "
        android:textColor="#fff"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/qestion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/textfiled"
        android:drawablePadding="20dp"
        android:editable="false"
        android:text="هل لديك حلق مؤلم في الأيام القليلة الماضية؟"
        android:textSize="18sp" />
    <CheckBox
        android:id="@+id/idYes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="335dp"
        android:layout_marginRight="18dp"
        android:layoutDirection="rtl"
        android:text="نعم"
        android:textSize="24sp" />


    <CheckBox
        android:id="@+id/idNo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="10dp"
        android:layoutDirection="rtl"
        android:text="لا"
        android:textSize="24sp" />
    <Button
        android:id="@+id/idNext"
        android:background="@drawable/btn_backgroundsignup"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="470dp"
        android:textColor="#fff"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="التالي"/>


</RelativeLayout>